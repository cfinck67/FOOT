/*!
  \file
  \version $Id: TAGrunInfo.icc,v 1.2 2003/06/09 18:50:12 mueller Exp $
  \brief Implementation (inline) of TAGrunInfo
*/

//------------------------------------------+-----------------------------------
//! Default constructor.

inline TAGrunInfo::TAGrunInfo()
  : fiCam(-1),
    fiRun(-1)
{}

//------------------------------------------+-----------------------------------
//! Construct with campaign and run number.

inline TAGrunInfo::TAGrunInfo(Short_t i_cam, Short_t i_run)
  : fiCam(i_cam),
    fiRun(i_run)
{}

//------------------------------------------+-----------------------------------
//! Set campaign number.

inline void TAGrunInfo::SetCampaignNumber(Short_t i_cam)
{
  fiCam = i_cam;
  return;
}

//------------------------------------------+-----------------------------------
//! Set run number.

inline void TAGrunInfo::SetRunNumber(Short_t i_run)
{
  fiRun = i_run;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns campaign number.

inline Short_t TAGrunInfo::CampaignNumber() const
{
  return fiCam;
}

//------------------------------------------+-----------------------------------
//! Returns run number.

inline Short_t TAGrunInfo::RunNumber() const
{
  return fiRun;
}

//------------------------------------------+-----------------------------------
/*!
  \relates TAGrunInfo
  \brief Returns true of event id's \a lhs and \a rhs are equal
*/

inline bool operator==(const TAGrunInfo& lhs, const TAGrunInfo& rhs)
{
  return lhs.fiCam==rhs.fiCam && lhs.fiRun==rhs.fiRun;
}

